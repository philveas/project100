rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Public website content
    // These are read by your Next.js site to build pages.
    match /services/{document=**} {
      allow read: if true;  // anyone can view (needed for SSR)
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /sections/{document=**} {
      allow read: if true;  // public read for SSR
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // ✅ Contact form submissions
    // Allow anyone to submit a message; only authenticated users can view.
    match /contact_submissions/{document=**} {
      allow read: if request.auth != null;
      allow write: if true;
    }

    // ✅ Example: restrict other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
